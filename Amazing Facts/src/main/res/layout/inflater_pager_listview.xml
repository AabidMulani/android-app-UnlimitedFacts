<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dip">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:layout_above="@+id/share_button"
        android:layout_below="@+id/goto_button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.probytemedia.amazingfacts.utils.ColoredTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:padding="10dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/textView"
                android:textColor="@color/theme_color" />

        </RelativeLayout>

    </ScrollView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/goto_button"
        android:text="Goto"
        android:textColor="@color/white"
        android:background="@drawable/apptheme_btn_default_holo_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <com.probytemedia.amazingfacts.utils.ColoredTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textStyle="bold"
        android:singleLine="true"
        android:padding="4dip"
        android:textColor="@color/theme_color"
        android:gravity="center"
        android:id="@+id/number_quote"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/scrollView"
        android:layout_toRightOf="@+id/goto_button"
        android:layout_toLeftOf="@+id/fav_button" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/fav_button"
        android:src="@drawable/selector_fav_unfav"
        android:background="@drawable/apptheme_btn_default_holo_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Share"
        android:textColor="@color/white"
        android:id="@+id/share_button"
        android:background="@drawable/apptheme_btn_default_holo_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>