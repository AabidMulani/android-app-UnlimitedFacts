<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.probytemedia.unlimitedfacts">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="com.probytemedia.amazingfacts.BaseApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.probytemedia.amazingfacts.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.startapp.android.publish.list3d.List3DActivity"
            android:theme="@android:style/Theme" />

        <activity
            android:name="com.startapp.android.publish.AppWallActivity"
            android:theme="@android:style/Theme.Translucent"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.purplebrain.adbuddiz.sdk.AdBuddizActivity"
            android:theme="@android:style/Theme.Translucent" />

        <meta-data
            android:name="DATABASE"
            android:value="unlimitedfacts.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />

        <meta-data
            android:name="QUERY_LOG"
            android:value="false" />

        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.probytemedia.amazingfacts.models" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="38cfa6c6c4c701db148187e11eefa4a964c1af8d" />

    </application>

</manifest>
